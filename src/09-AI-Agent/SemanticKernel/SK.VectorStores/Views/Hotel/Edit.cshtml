@model Hotel
@{
    ViewData["Title"] = "Edit Hotel";
}
<h2>Edit Hotel</h2>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="HotelId" class="form-label">编号</label>
        <input asp-for="HotelId" class="form-control" />
        <span asp-validation-for="HotelId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="HotelName" class="form-label">酒店名称</label>
        <input asp-for="HotelName" class="form-control" />
        <span asp-validation-for="HotelName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">酒店描述</label>
        <textarea asp-for="Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="alert alert-info">
        保存时会自动为 <strong>Description</strong> 生成向量并写入数据库。
    </div>
    <button type="submit" class="btn btn-primary">保存</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
